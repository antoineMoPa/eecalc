.account-content
  h3 Your Account
  col-md-6
    h4 Change your username
    form(action="/account-username", method="post")
      fieldset
        label User name (6-40 letters and numbers)
        br
        input(type="text", pattern="^[AZa-z0-9]{6-40}$", name="username", placeholder="JohnSmith")
    .text-left
      button(type="submit" value="submit")
        | Change username
    h4 Change email address
    form(action="/account-email", method="post")
      fieldset 
        label New email address
        br
        input(type="email", name="email", placeholder="email@email.com")
    .text-left
      button(type="submit" value="submit")
        | Change email address
  col-md-6
    h4 Password Change
    form(action="/account-password", method="post")
      fieldset
        label Current password
        br
        input(type="password", name="current_password", pattern="^.{6,}$", placeholder="Current password")
        br
        br
        label New password
        br
        input(type="password", name="new_password", pattern="^.{6,}$", placeholder="New password")
        br
        br
        label Retype new password
        br
        input(type="password", name="new_password_repeat", pattern="^.{6,}$", placeholder="Retype new password")
      .text-left
        button(type="submit" value="submit")
          | Change password

  br
  hr
  p.text-center
    a(href="/dashboard")
      button
          |  Go back to my dashboard
