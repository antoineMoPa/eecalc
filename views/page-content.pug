.main-page
  if positive_message
    .server-message.positive
      p
        = message
  if negative_message
    .server-message.negative
      p
        = message

  if page != undefined
    .static
      if page == "landing"
        include ./landing.pug
      else if page == "pricing"
        .pricing
          include ./pricing.pug
      else if page == "signup"
        .signup
          include ./signup.pug
      else if page == "account"
        .account
          include ./account.pug
      else if page == "login"
        .login
          include ./login.pug
      else if page == "dashboard"
        .dashboard
          include ./dashboard.pug
  else
    col-md-6
      p To get started, scroll down and see the quick reference.
    col-md-6
      p.text-right.livecalc-sharing
          | Share this sheet: 
          a(target="_blank", href=("https://twitter.com/intent/tweet?text=View%20this%20livecalc.xyz%20sheet:%20"+ share_url))
            | twitter 
          a(target="_blank",href=share_url).url-popup-modal
            | URL
    livecalc
  br
  p.text-center
    | Licence: 
    a(href='https://www.gnu.org/licenses/gpl-3.0.en.html',
      target='_blank')
      | GPLv3
  br
