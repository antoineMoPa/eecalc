html
  head
    meta(charset='utf-8')
    meta
    // I'm so meta
    title livecalc.xyz Collaborative Calculator 
    link(rel='stylesheet', href='/fonts/fira/fira.css')
    link(rel='stylesheet', href='/css/style.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Multi-user calculator for all your projects that include math, plots & problems to solve.')
    meta(name='og:title', content='livecalc.xyz open source collaborative calculator')
    meta(name='og:description', content='Multi-user calculator for all your projects that include math, plots & problems to solve.')
  body(class="page-"+(page || ""), class=in_sheet? "in-sheet": "")
    include ./header.pug
