    script(src='/lib/autosize.min.js')
    script(src='/base.js')
    script(src='/cell_types/text.js')
    script(src='/cell_types/mathjs.js')
    script(src='/mathjs-canvas-image.js')
    script(src='/livecalc.js', charset='utf-8')
    script(src='/livechat.js')
    script(src='/main.js')
