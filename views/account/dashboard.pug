.dashboard-content
  col-md-6
    h3 Dashboard
    - var name = user.get_name() || ""
    if(name != "")
      p
        | Name: 
        = name
    p
      | Username: 
      = user.get_username()
    h4 Recently visited sheets
    if recent_sheets.length == 0
      p (No recently visited sheets)
    .recent-sheet-list.list
      ul
        for sheet in recent_sheets
          -url = "/sheet/"+sheet
          li
            a(href=url)= url
    p
      a(href="/new")
        button
         | Create a new sheet
    h4 Challenges you created
    if challenges.length == 0
      p (No challenges)
    .challenge-list.list
      ul
        for challenge in challenges
          -url = "/challenge/" + challenge.public_id
          -del = url + "/delete"
          -run = url + "/run"
          li
            a(href=url)
              = url
              |  - 
              = challenge.title.substr(0,50)
            form(method="post", action=del).delete-form
              input(type="hidden", name="id", value=challenge.public_id)
              button.delete(type="submit")
                | delete
            a.run(href=run) run
    p
      a(href="/challenge/new")
        button
         | Create a new challenge
  
  col-md-6
    h4 Account Settings
    p
      |  Change your username, password, email address & more : 
      a(href="/account").account-settings-link
        button Account Settings
  clearfix
