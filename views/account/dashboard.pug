.dashboard-content
  col-md-6
    h3 Dashboard
    - var name = user.get_name() || ""
    if(name != "")
      p
        | Name: 
        = name
    p
      | Username: 
      = user.get_username()
    h4 Recently visited sheets
    if recent_sheets.length == 0
      p (No recently visited sheets)
    .recent-sheet-list
      ul
        for sheet in recent_sheets
          -url = "/sheet/"+sheet
          li
            a(href=url)= url
    p
      a(href="/new")
        button
         | Create a new sheet
    h4 Challenges you created
    if recent_sheets.length == 0
      p (No challenge)
    .recent-sheet-list
      ul
        for challenge in user.get_challenges()
          -url = "/challenge/" + challenge
          li
            a(href=url)= url
    p
      a(href="/new-challenge/")
        button
         | Create a new challenge
  
  col-md-6
    h4 Account Settings
    p
      |  Change your username, password, email address & more : 
      a(href="/account").account-settings-link
        button Account Settings
  clearfix
